{
  "name": "@brudi/eslint-config",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "lerna run test",
    "update-version": "lerna version --no-git-tag-version --no-push --force-publish '*'",
    "publish:next": "lerna publish --canary --preid next --dist-tag next --yes",
    "publish:production": "lerna publish --dist-tag latest --conventional-commits --create-release=github --yes"
  },
  "devDependencies": {
    "lerna": "~4.0.0",
    "@commitlint/config-conventional": "12.1.4",
    "commitiquette": "1.0.11",
    "commitizen": "4.2.4",
    "commitlint": "12.1.4",
    "lint-staged": "11.0.0",
    "git-branch-is": "4.0.0",
    "husky": "6.0.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix --ignore-path .lint-staged-ignore"
    ],
    "src/**/*.{md,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "commitiquette"
    }
  }
}
