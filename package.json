{
  "name": "@brudi/eslint-config",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "lerna run test",
    "update-version": "lerna version --no-git-tag-version --no-push --skip-npm --force-publish '*'",
    "publish:next": "lerna publish --canary --preid next --dist-tag next --yes",
    "publish:production": "lerna publish --dist-tag latest --conventional-commits --create-release=github --yes"
  },
  "devDependencies": {
    "lerna": "~3.22.1",
    "@commitlint/config-conventional": "~11.0.0",
    "commitlint": "~11.0.0",
    "devmoji": "~2.1.10",
    "git-branch-is": "~4.0.0",
    "husky": "~4.3.0"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "devmoji -e",
      "commit-msg": "if git-branch-is --not -r \"main|next|^release/\"; then commitlint -E HUSKY_GIT_PARAMS; fi"
    }
  }
}
